  "packageManager": "pnpm@9.7.1",
  "dependencies": {
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^4.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@eslint/js": "^9.10.0",
    "commit-and-tag-version": "^11.3.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
