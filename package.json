{
  "name": "applicationtrackr-firebase-functions",
  "description": "ApplicationTrackr cloud functions for Firebase",
  "version": "3.0.1",
  "engines": {
    "node": "20"
  },
  "main": "src/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "serve": "firebase emulators:start --only functions",
